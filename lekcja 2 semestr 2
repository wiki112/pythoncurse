Pi = 3.14
class kolo:
    promien = 0
    def __init__(self, r):
        self.promien = r
        self.pole = Pi * self.promien * self.promien
        print(f"Pole koła wynosi {self.pole}")
        self.obwod = Pi * self.promien * 2
        print(f"Obwód koła wynosi {self.obwod}")

class prostokat:
    szerokosc = 0
    wysokosc = 0
    def __init__(self,w,s):
        self.szerokosc = s
        self.dlugosc = w
        self.pole1 = self.wysokosc * self.szerokosc
        print(f"Pole prostokąta wynosi{self.pole1}")
        self.obwod2 = 2 * self.wysokosc + 2 * self.szerokosc
        print(f"Obwód prostokąta wynosi {self.obwod2}")
kolo1 = kolo(10)
prostokat1 = prostokat(10,5)
